<% content_for :header do %>
  <section class="content-header">
	  <h1><%= session[:prison_title] %></h1>
	  <div class="row">
      <div class="col-xs-12">
        <ol class="breadcrumb" style="font-size:medium;">
          <li><a href="/dashboard"><i class="fa fa-dashboard"></i> 首页 </a></li>
          <li class="active">终端信息管理</li>
        </ol>
      </div>
    </div>
  </section>
<% end %>

<% content_for :content do %>
  <section class="content" style="margin-top:-25px;">
  	<div class="row">
  	  <div class="col-xs-8 col-xs-offset-2">
  	  	<div class="box box-info">
          <div id="delimg">
          </div>
  	  	<%= form_for @terminal, method: "patch", html: {:class => 'form-horizontal', multipart: true,name:"form_n"} do |f| %>
  	  	  <div class="box-header with-border">
  	  	  	<div class="box-title">
              <h4>编辑终端信息</h4>
            </div>
  	      </div>
  		    <div class="box-body">
  		      <div class="input-group" style="padding:10px 100px 20px">
              <span class="input-group-addon input-group-lg">终端号</span>
              <%= f.text_field :terminal_number, :placeholder =>'请填写终端号', :class => 'form-control text-not-null' %>
              <%= f.hidden_field :jail_id, :value => session[:jail_id] %>
            </div>

            <div class="input-group area" style="padding:10px 100px 20px">
              <span class="input-group-addon input-group-lg">会议室号</span>
              <%= f.text_field :room_number, :placeholder =>'请填写会议室号', :class => 'form-control text-not-null' %>
            </div>

            <div class="input-group area" style="padding:10px 100px 20px">
              <span class="input-group-addon input-group-lg">主持人密码</span>
              <%= f.text_field :host_password, :placeholder =>'请填写主持人密码', :class => 'form-control text-not-null' %>
            </div>

            <div class="input-group area" style="padding:10px 100px 20px">
              <span class="input-group-addon input-group-lg">参与密码</span>
              <%= f.text_field :metting_password, :placeholder =>'请填写参与密码', :class => 'form-control text-not-null' %>
            </div>

    	  	  <div class="box-footer">
              <input type="button" value="更新" class="btn btn-info pull-right save btn-add" onclick="checkForm()" />
    	  	  </div>
  	  	<% end %>
  	  	</div>
  	  </div>
  	</div>
  </section>

  <script type="text/javascript" src="/plugins/sinaEditor/sinaeditor_min.js"></script>
  <script charset="utf-8" src="/plugins/kindeditor/kindeditor-all-min.js"></script>
  <script charset="utf-8" src="/plugins/kindEditor/lang/zh_CN.js"></script>
  <script charset="utf-8" src="/plugins/picturePreview/picturePreview.js"></script>

  <script>
  function checkForm(){
    var frm=document.getElementsByName("form_n")[0];
    frm.submit();
  }
  </script>
<% end %>
