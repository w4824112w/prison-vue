<% content_for :header do %>
  <section class="content-header">
	  <h1><%= session[:prison_title] %>添加xinwen</h1>
	  <ol class="breadcrumb">
		<li><a href="/dashboard"><i class="fa fa-dashboard"></i> 首页 </a></li>
		<li class="active">xinwen管理</li>
    <li class="active">添加xinwen</li>
	  </ol>
  </section>
<% end %>

<% content_for :content do %>
  <section class="content"  style="margin-top:-25px;">
  	<div class="row">
  	  <div class="col-xs-12">
  	  	<div class="box box-info">
  	  	<%= form_for @apply, method: "post", html: {:class => 'form-horizontal', multipart: true} do |f| %>
  	  	  <div class="box-header with-border">
  	  	  	<div class="box-title"></div>
  	  	  </div>
  		    <div class="box-body">
  		      <div class="input-group" style="padding:10px 100px 20px">
              <span class="input-group-addon input-group-lg">商品名称</span>
              <%= f.text_field :name,:placeholder =>'请填写名称' , :class => 'form-control' %>
              <%= f.hidden_field :jail_id, :value => session[:jail_id] %>
            </div>
            <div class="input-group" style="padding:10px 100px 20px">
              <span class="input-group-addon input-group-lg">商品简介</span>
              <%= f.text_area :phone, :placeholder =>'请填写简介',size: "60x12" %>
            </div>	 
             <div class="input-group" style="padding:10px 100px 20px">
              <span class="input-group-addon input-group-lg">商品简介</span>
              <%= f.text_area :is_allowed, :placeholder =>'请填写简介',size: "60x12" %>
            </div>  
  	  	  <div class="box-footer">
  	  	  	<%= f.button "更新", :class => "btn btn-info pull-right save btn-add" %>
  	  	  </div>
  	  	<% end %>
  	  	</div>
  	  </div>
  	</div>
  </section>
<% end %>