<% content_for :header do %>
    <section class="content-header">
      <p style="display:none;"><%= session[:jail_id] %></p>
      <div class="row">
      <div class="col-xs-12">
        <ol class="breadcrumb" style="font-size:medium;">
          <li><a href="/dashboard"><i class="fa fa-dashboard"></i> 首页 </a></li>
          <li class="active">家属订单管理</li>
        </ol>
      </div>
    </div>
    </section>
<% end %>

<% content_for :content do %>
    <section class="content"   style="margin-top:-25px;">
      <div class="row">
        <div class="col-xs-12">
          <div class="box box-info">
            <div class="box-header">
              <div class="box-tools">
                <div class="input-group" style="width:150px;"></div>
              </div>
            </div>
            <div class="box-body">
              <div class="col-md-12">
                <table class="table table-striped table-hover table-bordered">
                  <thead>
                    <tr>
                      <th style="display:none">订单id</th>
                      <th>订单号</th>
                      <th>订单状态</th>
                      <th>创建日期</th>
                      <th>支付日期</th>
                      <th>更改配送状态</th>
                      <th>订单详情</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @items_orders.each do |order| %>
                      <tr style="display:none;">
                        <td style="display:none" class="id"><%= order.id%></td>
                        <td><%= order.trade_no %></td>
                        <td class="status"><%= order.status %></td>
                        <td><%= order.created_at %></td>
                        <td><%= order.gmt_payment %></td>
                        <td style="text-align:center;background-color:white;"><a class="btn btn-block btn-primary btn-flat reach">配送完成</a></td>
                        <td style="text-align:center;background-color:white;"><a class="btn btn-block btn-default details">订单详情</a></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="box-footer" style="text-align:center">
              <ul class="pagination pagination-sm page">

              </ul>
            </div>
          </div>
        </div>
      </div>

    </section>

    <div class="modal modal-default fade in" id="formModal" style="display:none;padding-right:17px;">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" >
              <span>x</span>
            </button>
            <h4>更改配送状态</h4>
            <p id="msg"></p>
          </div>
          <div class="modal-body">
            <p>是否确定已完成此订单的配送任务？</p>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-block btn-default pull-right complete" data-dismiss="modal">确定完成</button>
            <button type="button" class="btn btn-block btn-default pull-left" data-dismiss="modal">关闭</button>
          </div>
        </div>
      </div>
    </div>

<% end %>
