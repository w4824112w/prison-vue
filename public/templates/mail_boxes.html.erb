<div class="box">
<div class="box-header">
  <h3 class="box-title">未读新邮件</h3>

  <div class="box-tools">
    <div style="width: 150px;" class="input-group input-group-sm">
      <input type="text" placeholder="Search" class="form-control pull-right" name="table_search">

      <div class="input-group-btn">
        <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
      </div>
    </div>
  </div>
</div>

<div class="box-body table-responsive no-padding">
  <table class="table table-hover">
    <tbody><tr>
      <th>标题</th>
      <th>内容</th>
      <th>日期</th>
    </tr>
    <tr ng-repeat="mailbox in mailboxes">
      <td>{{mailbox.title}}</td>
      <td>{{mailbox.contents}}</td>
      <td>{{mailbox.created_at}}</td>
    </tr>
  </tbody></table>
</div>
<!-- /.box-body -->
</div>