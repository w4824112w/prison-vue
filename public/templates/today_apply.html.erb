<div class="box">
	<div class="box-header">
	  <h3 class="box-title">今日远程视频申请</h3>

	  <div class="box-tools">
	    <div style="width: 150px;" class="input-group input-group-sm">
	      <input type="text" placeholder="Search" class="form-control pull-right" name="table_search">

	      <div class="input-group-btn">
	        <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="box-body table-responsive no-padding">
	  <table class="table table-hover">
	    <tbody><tr>
	      <th>姓名</th>
	      <th>电话</th>
	      <th>身份证</th>
	      <th>囚号</th>
	      <th>关系</th>
	      <th>预约时间</th>
	    </tr>
	    <tr ng-repeat="apply in applies">
	      <td>{{apply.name}}</td>
	      <td>{{apply.phone}}</td>
	      <td>{{apply.uuid}}</td>
	      <td>{{apply.prisoner_number}}</td>
	      <td>{{apply.relationship}}</td>
	      <td>{{apply.app_date}}</td>
	    </tr>
	  </tbody></table>
	</div>
</div>